{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
      {
        "type": "ColumnSet",
        "columns": [
          {
            "type": "Column",
            "width": 2,
            "items": [
              {
                "type": "TextBlock",
                "text": "Registrazione",
                "weight": "bolder",
                "size": "medium"
              },
              {
                "type": "TextBlock",
                "text": "Crea un nuovo account per avere tutto a portata di mano.",
                "isSubtle": true,
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "Non preoccuparti, i tuoi dati saranno cifrati e in alcun modo condivisi.",
                "isSubtle": true,
                "wrap": true,
                "size": "small"
              },
              {
                "type": "Container",
                "items": [
                  {
                    "type": "Input.Text",
                    "label": "Nome e Cognome",
                    "id": "name",
                    "regex": "",
                    "errorMessage": "Il nome non rispetta il formato.",
                    "isRequired": true
                  },
                  {
                    "type": "Input.Date",
                    "label": "Data di nascita",
                    "id": "ddn",
                    "errorMessage": "La data di nascita non rispetta il formato.",
                    "isRequired": true
                  },
                  {
                    "type": "Input.Text",
                    "label": "Luogo di nascita",
                    "id": "luogo",
                    "regex": "",
                    "errorMessage": "Il nome non rispetta il formato.",
                    "isRequired": true
                  }
                ]
              }
            ]
          },
          {
            "type": "Column",
            "width": 1,
            "items": [
              {
                "type": "Image",
                "url": "https://raw.githubusercontent.com/frapiocov/frapiocov.github.io/main/img/donothing/dono%20(11).webp",
                "altText": "logo",
                "size": "auto"
              }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Submit"
      }
    ]
  }
  